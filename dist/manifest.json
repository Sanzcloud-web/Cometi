{
  "manifest_version": 3,
  "name": "Extend Sidebar Chat",
  "version": "0.1.0",
  "description": "Exemple d'extension Chrome avec panneau lat√©ral pour un chat React.",
  "action": {
    "default_title": "Ouvrir le chat",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["sidePanel"],
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
