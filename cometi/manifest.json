{
  "manifest_version": 3,
  "name": "Cometi",
  "version": "0.1.0",
  "description": "Cometi, un chat React pensé pour le panneau latéral de Chrome.",
  "action": {
    "default_title": "Ouvrir Cometi",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["sidePanel", "activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://*.vercel.app/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*",
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
